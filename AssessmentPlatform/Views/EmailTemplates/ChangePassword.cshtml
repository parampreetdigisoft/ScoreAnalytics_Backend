@model AssessmentPlatform.Views.EmailModels.EmailInvitationSendRequestDto
@{
    Layout = null; // no master layout
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background: #F8F8F8;
            font-family: 'Poppins', Arial, sans-serif;
        }

        table {
            border-collapse: collapse !important;
        }

        a {
            text-decoration: none;
        }

        .email-container {
            max-width: 700px;
            margin: auto;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 3px 20px rgba(0,0,0,0.05);
        }

        .header {
            text-align: center;
            padding: 40px 20px 20px;
        }

            .header img {
                height: 70px;
            }

        .title {
            font-size: 26px;
            font-weight: 600;
            color: #4B43D0;
            margin: 20px 0 10px;
        }

        .divider {
            border-top: 1px solid #E0E0E0;
            margin: 20px 0;
        }

        .content {
            padding: 0 40px 30px;
            color: #555555;
            font-size: 15px;
            line-height: 24px;
            text-align: left;
        }

        .button {
            display: inline-block;
            background: #4B43D0;
            color: #ffffff !important;
            font-size: 16px;
            font-weight: 500;
            padding: 12px 24px;
            border-radius: 6px;
            margin: 10px 5px 0;
        }

        .footer {
            padding: 20px 40px;
            color: #929292;
            font-size: 14px;
            line-height: 22px;
        }
    </style>
</head>
<body>
    <table width="100%" bgcolor="#F8F8F8">
        <tr><td height="40"></td></tr>
        <tr>
            <td align="center">
                <table class="email-container" width="100%">
                    <tr>
                        <td class="header">
                            <img src="@($"{Model.ApiUrl}/assets/images/veridian-urban-index.png")" alt="VUI’s Logo" />
                            <div class="title">@Model.Title</div>
                        </td>
                    </tr>
                    <tr>
                        <td><div class="divider"></div></td>
                    </tr>
                    <tr>
                        <td class="content">
                            <p>@Model.MsgText</p>
                            <p>
                                @Model.DescriptionAboutBtnText
                            </p>
                            <div style="text-align:center;">
                                @if (Model.IsShowBtnText)
                                {
                                    <a href="@Model.ResetPasswordUrl" class="button">@Model.BtnText</a>
                                }
                                @if(Model.IsLoginBtn)
                                {
                                    <a href="@Model.ApplicationUrl" class="button" style="background:#666666;">Login</a>
                                }
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="footer">
                            <p>Sincerely,<br />VUI’s Team</p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr><td height="40"></td></tr>
    </table>
</body>
</html>




