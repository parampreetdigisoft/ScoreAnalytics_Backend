@model AssessmentPlatform.Views.EmailModels.EmailInvitationSendRequestDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body style="margin:0;padding:0;background:#F4F6FB;font-family:Arial, sans-serif;">

    <table width="100%" cellpadding="0" cellspacing="0" bgcolor="#F8F8F8" style="padding:40px 0;">
        <tr>
            <td align="center">

                <!-- MAIN CONTAINER -->
                <table width="100%" cellpadding="0" cellspacing="0"
                       style="max-width:720px;margin:0 auto;background:#ffffff;
                       border-radius:14px;overflow:hidden;
                       box-shadow:0px 10px 30px rgba(0,0,0,0.08);">

                    <!-- HEADER -->
                    <tr>
                        <td align="center"
                            style="padding:40px 30px 25px;
                            background:#efbf04;color:#ffffff;">

                            <img src="@($"{Model.ApiUrl}/assets/images/veridian-urban-index.png")"
                                 alt="VUI Logo"
                                 style="height:75px;margin-bottom:20px;display:block;" />

                            <div style="font-size:28px;font-weight:600;
                                letter-spacing:0.5px;color:#304a43;
                                max-width:550px;margin:0 auto;">
                                @Model.Title
                            </div>
                        </td>
                    </tr>

                    <!-- CONTENT -->
                    <tr>
                        <td style="padding:35px 40px 25px;
                                   font-size:15px;
                                   color:#444444;
                                   line-height:1.7;">

                            <p style="margin:0 0 18px;">Dear User,</p>

                            <p style="margin:0 0 18px;">
                                @Model.MsgText
                            </p>

                            <div style="text-align:center;margin:20px 0;">
                                @if (Model.IsShowBtnText)
                                {
                                    <a href="@Model.ResetPasswordUrl"
                                        style="display:inline-block;
                                                    padding:14px 20px;
                                                    background:#efbf04;
                                                    color:#304a43;
                                                    font-size:16px;
                                                    border-radius:10px;
                                                    font-weight:600;
                                                    text-decoration:none;">
                                        @Model.BtnText
                                    </a>
                                }
                                @if (Model.IsLoginBtn)
                                {
                                    <a href="@Model.ApplicationUrl"
                                        style="display:inline-block;
                                                    padding:14px 20px;
                                                    background:#efbf04;
                                                    color:#304a43;
                                                    font-size:16px;
                                                    border-radius:10px;
                                                    font-weight:600;
                                                    text-decoration:none;">
                                        Login
                                     </a>
                                }
                            </div>

                            <p style="margin:0 0 18px;">
                                @Model.DescriptionAboutBtnText
                            </p>

                            <p style="margin:0 0 18px;">
                                For assistance, contact
                                <a href="mailto:@Model.Mail"
                                   style="color:#304a43;
                                   text-decoration:none;
                                   font-weight:600;">
                                    @Model.Mail
                                </a>.
                            </p>
                        </td>
                    </tr>

                    <!-- FOOTER -->
                    <tr>
                        <td style="padding:25px 40px 35px;
                                   background:#FAFAFA;
                                   font-size:14px;
                                   color:#808080;
                                   border-top:1px solid #eeeeee;">

                            <p style="margin:6px 0;color:#304a43;">
                                Best regards,
                            </p>

                            <p style="margin:6px 0;
                                      color:#304a43;
                                      font-weight:600;">
                                <strong>Veridian Urban Systems – Platform Administration</strong>
                            </p>
                        </td>
                    </tr>

                </table>

            </td>
        </tr>
    </table>

</body>
</html>
